<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<formset>

		<form name="/uform">
			<field property="id" depends="required,intRange,integer">
				<arg0 name="required" key="id.required" />
				<arg1 name="intRange" key="${var:min}" resource="false" />
				<arg2 name="integer" key="${var:max}" resource="false" />
				<var>
					<var-name>min</var-name>
					<var-value>1</var-value>
				</var>
				
				<var>
					<var-name>max</var-name>
					<var-value>1000</var-value>
				</var>
				
				
			</field>

			<field property="name" depends="required,minlength">
				<arg0  key="name.required" />
				<arg1 key="${var:minlength}" resource="false"></arg1>
				<var>
					<var-name>minlength</var-name>
					<var-value>10</var-value>
				</var>
			
			</field>

			<field property="salary" depends="required">
				<arg name="required" key="salary.required" />
			</field>

		</form>

	</formset>

</form-validation>
