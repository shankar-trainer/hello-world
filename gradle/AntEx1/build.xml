<?xml version="1.0"?>
<project name="project1" default="clean">

	<target name="init">
		<mkdir dir="${build.dir}" />
		<echo> inside init task  mkdir is  done</echo>
	</target>

	<target name="execute" depends="compile">
		<java classname="com.example.Test1" classpath="${build.dir}" />
		<java classname="com.example.Calculation" classpath="${build.dir}" />
		<echo> inside execute  task execute  is  done</echo>
	</target>


	<target name="compile" depends="init">
		<javac srcdir="src" destdir="${build.dir}" />
		<echo> inside compile task  compilation is  done</echo>
	</target>

	<target name="clean" depends="execute">
		<delete dir="${build.dir}" />
		<echo> ${build.dir} is deleted </echo>
	</target>
</project>