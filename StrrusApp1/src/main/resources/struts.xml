<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
		"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<package name="basicstruts2" extends="struts-default">
		<action name="userAction"
			class="com.pathinfotech.model.User">
			<result name='success'>userpage/UserResult.jsp</result>
 			<result name='error'>userpage/UserError.jsp</result>
			<result name='login'>UserForm.jsp</result>
		</action>
		
		 <action name="empAction" class="com.pathinfotech.model.EmployeeRegistration">
				<result name='success'>employeeResult/EmployeeResult.jsp</result>
				<result name='input'>EmployeeRegistration.jsp</result>
		</action> 
		
		<action name="addEmpAction" class="com.pathinfotech.model.EmployeeRegistration" method="addEmployee">
				<result name='success'>employeeResult/EmployeeResult.jsp</result>
		</action>
		
		<action name="searchEmpAction" class="com.pathinfotech.model.EmployeeRegistration" method="searchEmployee">
				<result name='success'>employeeResult/EmployeeResult.jsp</result>
		</action>
		<action name="updateEmpAction" class="com.pathinfotech.model.EmployeeRegistration" method="updateEmployee">
				<result name='success'>employeeResult/EmployeeResult.jsp</result>
		</action>     
		<action name="showAllEmpAction" class="com.pathinfotech.model.EmployeeRegistration" method="showAllEmployee">
				<result name='success'>employeeResult/EmployeeResult.jsp</result>
		</action>
		
		<action name="removeEmpAction" class="com.pathinfotech.model.EmployeeRegistration" method="removeEmployee">
				<result name='success'>employeeResult/EmployeeResult.jsp</result>
				
		</action>
	</package>
	
</struts>
