<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
		"http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<constant name="struts.custom.i18n.resources" value="Product" />
	<constant name="struts.custom.i18n.resources" value="Customer" />

	<package name="basicstruts2" extends="struts-default">
		<interceptors>
			<interceptor name="myinterceptor1"
				class="com.example.interceptor.StudentIntercepor">
			</interceptor>
		</interceptors>

		<action name="myaction" class="com.example.model.User">
			<result name="success">result/success.jsp</result>
			<result name="error">result/error.jsp</result>
		</action>

		<action name="empAction" class="com.example.model.Employee">
			<result name='success'>WEB-INF/empResult/empdata.jsp</result>
			<result name='error'>EmpForm.jsp</result>
		</action>

		<action name="surveyAction" class="com.example.model.Survey">
			<result name='success'>WEB-INF/surveyResult/surveydata.jsp</result>
			<result name='input'>SurveyForm.jsp</result>
		</action>

		<action name="studentAction"
			class="com.example.model.StudentRegistration" method="execute">
			<!-- <interceptor-ref name="myinterceptor1"/> -->
			<result name='success'>WEB-INF/studentResult/StudentResult.jsp</result>
			<result name='input'>StudentForm.jsp</result>
		</action>

		<action name="generictag">
			<result name='success'>WEB-INF/studentResult/generictag.jsp</result>
		</action>

		<action name="bookAction" class="com.example.model.Book">
			<result name='success'>BookInfo.jsp</result>
		</action>

		<action name="cstAction" class="com.example.model.Customer">
			<result name='success'>WEB-INF/customerResult/customerInfo.jsp</result>
			<result name='input'>CustomerForm.jsp</result>
		</action>


		<action name="prdAction" class="com.example.model.Product"
			method="execute">
			<result name='success'>WEB-INF/pages/productInfo.jsp</result>
			<result name='input'>ProductForm.jsp</result>
		</action>

		<action name="sAction"
			class="com.example.model.MyStudentModelDriven"
			method="showallStudent">
			<result name='success'>WEB-INF/pages/StudentRecord.jsp</result>
		</action>

	</package>
	
	<package name="com.example.model" extends="tiles-default">
 		<action name="trainingAction">
			<result name="success" type="tiles">Training</result>
		</action>
	
 		<action name="trainingAdd">
			<result name="success" type="tiles">TrainingData</result>
		</action>
	</package>
</struts>
