<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="delivery1" class="com.cts.model.Delivery"
		scope="prototype">
		<property name="deliveryId" value="55656"></property>
		<property name="deliveryName" value="pizza delivery"></property>
		<property name="deliveryLocation"
			value="chennai thoraipakkam"></property>
	</bean>

	<bean id="delivery2" class="com.cts.model.Delivery"
		p:deliveryId="3" p:deliveryName="laptop delivery"
		p:deliveryLocation="laxminagar delhi">
	</bean>

	<bean id="factory" class="com.cts.model.CustomerFactory">
	</bean>

	<bean id="cst" class="com.cts.model.Customer"
		factory-bean="factory" factory-method="createCustomer">
	</bean>


	<bean id="leader" class="com.cts.model.Leader" init-method="leaderInit" 
	destroy-method="leaderDestroy" lazy-init="true" >
			<property name="leaderName" value="deepak s"></property>
			<property name="leaderId" value="787887"></property>
		<property name="leaderLocation" value="madurai"></property>
		<property name="speech" ref="speech"></property>
	</bean>

	<bean id="speech" class="com.cts.model.Speech">
		<property name="speechId" value="666"></property>
		<property name="speechName" value="health"></property>
		<property name="duration" value="150"></property>
	</bean>
	
</beans>